// ARQUIVO: .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: install",
      "type": "npm",
      "script": "install",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "npm: create-assets",
      "type": "npm",
      "script": "create-assets",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "npm: start",
      "type": "npm",
      "script": "start",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": [],
      "dependsOn": "npm: create-assets"
    },
    {
      "label": "npm: dev",
      "type": "npm",
      "script": "dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": [],
      "dependsOn": "npm: create-assets"
    },
    {
      "label": "npm: build-win",
      "type": "npm",
      "script": "build-win",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": [],
      "dependsOn": "npm: create-assets"
    },
    {
      "label": "üßπ Clean Build",
      "type": "shell",
      "command": "Remove-Item",
      "args": [
        "-Path",
        "dist,build,node_modules/.cache",
        "-Recurse",
        "-Force",
        "-ErrorAction",
        "SilentlyContinue"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üîç Check Syntax",
      "type": "shell",
      "command": "node",
      "args": [
        "-c",
        "main.js",
        "&&",
        "node",
        "-c",
        "preload.js"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üì¶ Full Rebuild",
      "dependsOrder": "sequence",
      "dependsOn": [
        "üßπ Clean Build",
        "npm: install",
        "npm: create-assets",
        "npm: build-win"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    }
  ]
}