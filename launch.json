{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Launch IA DERIV App",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [
        ".",
        "--dev"
      ],
      "env": {
        "NODE_ENV": "development",
        "ELECTRON_ENABLE_LOGGING": "true",
        "ELECTRON_ENABLE_STACK_DUMPING": "true"
      },
      "outputCapture": "std",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "üß™ Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [
        "--inspect=9229",
        ".",
        "--dev"
      ],
      "env": {
        "NODE_ENV": "development",
        "ELECTRON_ENABLE_LOGGING": "true"
      },
      "outputCapture": "std",
      "console": "integratedTerminal",
      "port": 9229
    },
    {
      "name": "üîß Debug Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000,
      "urlFilter": "**/index.html*"
    },
    {
      "name": "üèóÔ∏è Build and Launch",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/.bin/electron-builder",
      "args": [
        "--dir"
      ],
      "env": {
        "NODE_ENV": "production"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "npm: create-assets"
    }
  ],
  "compounds": [
    {
      "name": "üîç Debug All Processes",
      "configurations": [
        "üß™ Debug Main Process",
        "üîß Debug Renderer Process"
      ]
    }
  ]
}

